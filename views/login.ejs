<form class="form-signin" action="/users/login" method="POST">
    <h1 class="h3 mb-3 font-weight-normal">ورود به بخش مدیریت</h1>
    <%- include("./includes/loginMessage.ejs") %>
    <label for="inputEmail" class="sr-only">آدرس ایمیل</label>
    <input
        type="email"
        name="email"
        id="inputEmail"
        class="form-control mb-2"
        placeholder="آدرس ایمیل"
        required
        autofocus
    />
    <label for="inputPassword" class="sr-only">کلمه عبور</label>
    <input
        name="password"
        type="password"
        id="inputPassword"
        class="form-control"
        placeholder="کلمه عبور"
        required
    />
    <div class="checkbox mb-3">
        <label>
            <input name="remember" type="checkbox" value="remember-me" /> من را به خاطر بسپار
        </label>
    </div>

    <div class="form-group">
        <div
            class="g-recaptcha"
            data-sitekey="6LdM-rchAAAAALPyAMf6ubaJAuoj_bP5jFE4Oy40"
        ></div>
    </div>

    <button class="btn btn-lg btn-primary btn-block" type="submit">ورود</button>

    <div class="checkbox mb-3 mt-3">
        <label>
            <a href="/users/register">ثبت نام</a>
        </label>
    </div>
    
    <a class="mt-4" href="/users/forget-password">فراموشی رمز عبور</a>

</form>
